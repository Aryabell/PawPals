<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin internet untuk API/Retrofit -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PawPals"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="android.support.vectordrawable"
            android:value="true" />

        <!-- Activity utama -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- komunitas -->
        <activity
            android:name=".community.NewPostActivity"
            android:exported="false" />
        <activity
            android:name=".community.ReplyActivity"
            android:exported="false" />

        <!-- adopsi -->

        <activity
            android:name=".adoption.DetailActivity"
            android:exported="false"
            android:label="Detail Anjing"
            android:theme="@style/Theme.PawPals" />

        <activity
            android:name=".adoption.AdoptionFormActivity"
            android:exported="false"
            android:label="Formulir Adopsi"
            android:theme="@style/Theme.PawPals" />


        <!-- ðŸ’¬ direct message -->
        <activity
            android:name=".message.ChatActivity"
            android:exported="false"
            android:label="Chat"
            android:theme="@style/Theme.PawPals" />

    </application>


</manifest>