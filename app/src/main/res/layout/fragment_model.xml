    <View
        android:id="@+id/viewScanArea"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        app:layout_constraintBottom_toTopOf="@id/viewScanArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewScanArea" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        app:layout_constraintBottom_toBottomOf="@id/viewScanArea"
        app:layout_constraintEnd_toStartOf="@id/viewScanArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewScanArea" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        app:layout_constraintBottom_toBottomOf="@id/viewScanArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewScanArea"
        app:layout_constraintTop_toTopOf="@id/viewScanArea" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="-4dp"
        android:src="@drawable/ic_scan_focus"
        app:layout_constraintBottom_toBottomOf="@id/viewScanArea"
        app:layout_constraintEnd_toEndOf="@id/viewScanArea"
        app:layout_constraintStart_toStartOf="@id/viewScanArea"
        app:layout_constraintTop_toTopOf="@id/viewScanArea"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupScanControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnMainAction,btnGallery" />

    <ImageButton
        android:id="@+id/btnMainAction"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_btn_scan"
        android:src="@drawable/ic_scan_icon"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:tint="#5CE4FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/btnGallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn_gallery"
        android:src="@drawable/ic_photo_library"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/btnMainAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMainAction"
        app:layout_constraintTop_toTopOf="@id/btnMainAction"
        app:layout_constraintHorizontal_bias="0.5" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#5CE4FF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btnMainAction"
        app:layout_constraintEnd_toEndOf="@id/btnMainAction"
        app:layout_constraintStart_toStartOf="@id/btnMainAction"
        app:layout_constraintTop_toTopOf="@id/btnMainAction" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_confidence_badge"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Tingkat kemiripan: 92%"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_result_card"
            android:padding="24dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Analisis"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvResultBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_confidence_badge"
                android:backgroundTint="@color/bg_result_healthy"
                android:gravity="center"
                android:padding="16dp"
                android:text="Tidak ditemukan tanda-tanda penyakit. Anabul sehat!"
                android:textColor="#2E7D32"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/tvResultTitle" />

            <TextView
                android:id="@+id/tvDisclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="*Ini hanya deteksi awal AI. Sebaiknya bawa ke dokter hewan untuk diagnosa pasti."
                android:textColor="@color/text_disclaimer"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/tvResultBody"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>