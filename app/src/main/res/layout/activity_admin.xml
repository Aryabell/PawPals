<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul Halaman -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‘ Panel Admin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginBottom="16dp" />

        <!-- Statistik Pengguna -->
        <TextView
            android:id="@+id/txtStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ Total: 0 | Pengurus: 0 | Member: 0"
            android:textSize="16sp"
            android:textColor="#374151"
            android:padding="8dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp" />

        <!-- Pengumuman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¢ Kirim Pengumuman"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tulis pengumuman..."
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSendAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Pengumuman"
            android:backgroundTint="#2563EB"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Kelola Pengguna -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ Daftar Pengguna"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Tambah Event -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Tambah Event Komunitas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama event..."
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Event"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Daftar Event yang ditambahkan -->
        <LinearLayout
            android:id="@+id/layoutEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F3F4F6"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
