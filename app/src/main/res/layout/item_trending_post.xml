<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:padding="12dp">

    <!-- Nama author / bold title -->
    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Author"
        android:textStyle="bold"
        android:textSize="14sp" />

    <!-- Isi konten -->
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Isi konten trending..."
        android:textSize="13sp" />

    <!-- Info kecil (misalnya jumlah komentar / waktu) -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="15 komentar Â· 2 jam lalu"
        android:textSize="11sp"
        android:textColor="#888888" />

    <ImageView
        android:id="@+id/imgTrending"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_star"
        android:contentDescription="Trending Icon"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE" />
</LinearLayout>
