<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adoption.AdoptionActivity">

    <!-- âœ… Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ðŸ”¹ Tombol hamburger -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ðŸ”¹ Judul -->
        <TextView
            android:id="@+id/tvAdoptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pals Adoption"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnMenu"
            app:layout_constraintTop_toTopOf="@id/btnMenu"
            app:layout_constraintBottom_toBottomOf="@id/btnMenu" />

        <!-- ðŸ”¹ RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDogs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="8dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/btnMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_adoption" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- âœ… Sidebar Navigation -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        android:background="@color/white" />

</androidx.drawerlayout.widget.DrawerLayout>
