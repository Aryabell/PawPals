<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/community_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 🔹 Header dengan Title + Search Icon -->
            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/tvForumTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pals Community"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/btnSearchCommunityToggle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search"
                    app:tint="@android:color/black" />
            </LinearLayout>

            <!-- 🔍 Search bar (tampil saat toggle diklik) -->
            <LinearLayout
                android:id="@+id/searchBarContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_search_rounded"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/etSearchCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cari di Community..."
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 🔸 Horizontal list kategori -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCommunities"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:overScrollMode="never" />

            <!-- 🔸 Sub Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sedang ramai dibicarakan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingVertical="12dp" />

            <!-- 🔹 Trending posts -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ➕ Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Tambah Post"
        app:tint="@android:color/white" />
</FrameLayout>
