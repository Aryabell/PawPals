<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/ivBannerDetail"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:contentDescription="Event banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#F5F5F5"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_circle_glass"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/ivBannerDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_white"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="120dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#333333"
                android:layout_marginBottom="20dp"
                tools:text="PawPals Community Meetup ðŸ¾" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="1.2dp"
                android:backgroundTint="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_calendar"
                            android:background="@drawable/bg_circle_pastel_blue"
                            app:tint="@color/primary_blue" />
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#444444"
                            tools:text="Sabtu, 20 Okt 2025 â€¢ 10:00 AM" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="50dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_location"
                            android:background="@drawable/bg_circle_pastel_pink"
                            app:tint="@color/pink_badge" />
                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#444444"
                            tools:text="Taman Kota, Jakarta" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang Event"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="24dp"
                tools:text="Bergabunglah dengan komunitas pecinta hewan terbesar di Jakarta! Kita akan berbagi tips perawatan anabul dan bermain bersama di taman." />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_gradient_white_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Hapus Event"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-black"
            android:backgroundTint="@color/pink_badge"
            app:cornerRadius="20dp"
            android:elevation="4dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_hide"
            app:iconGravity="textStart"
            app:iconPadding="8dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>