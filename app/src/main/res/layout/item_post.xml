<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ava_paw"
                android:layout_marginEnd="12dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <LinearLayout
                android:id="@+id/author_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProfile"
                android:layout_toStartOf="@id/moreBtn"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paw Admin"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/intervariable"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ 7m"
                        android:textSize="13sp"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/intervariable"
                        android:textColor="#757575" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_community_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_tag_pill"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Lost Dogs"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/intervariable"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/moreBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_more"
                app:tint="#757575"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="60dp"
            android:text="Halo, Mipaw nemu lost doggi di deket esdisi"
            android:textSize="15sp"
            android:lineSpacingExtra="3dp"
            android:textColor="#212121"
            android:fontFamily="@font/intervariable" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPostImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:src="@drawable/image_1"
            android:visibility="visible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.RoundedCorners"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_comment_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="24dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_comment"
                    app:tint="#757575"/>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="12"
                    android:textSize="13sp"
                    android:fontFamily="@font/intervariable"
                    android:textColor="#757575"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_like_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="24dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/iv_like_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite"
                    app:tint="#757575"/> <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="45"
                android:textSize="13sp"
                android:fontFamily="@font/intervariable"
                android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

</LinearLayout>